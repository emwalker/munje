{% extends "two-columns.jinja" %}
{% block title %}Questions{% endblock %}
{% block content %}
  <a href="/questions/new" class="button is-primary is-pulled-right">New question</a>
  <h2 class="title mb-5">Questions</h2>

  {% if questions.len() > 0 %}
    {% for question in questions %}
      <div class="card">
        <a class="question-text" href="/questions/{{ question.external_id }}">
          <div class="card-header-title">{{ question.title }}</div>
        </a>
        <div class="card-content pt-0">
          {{ question.text.markdown()|safe }}
        </div>
      </div>
    {% endfor %}
  {% else %}
    There are no items
  {% endif %}
{% endblock %}
